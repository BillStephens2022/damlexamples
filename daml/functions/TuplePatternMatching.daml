module TuplePatternMatching where

import Daml.Script

addVectors : (Decimal, Decimal) -> (Decimal, Decimal) -> (Decimal, Decimal)
addVectors (x1, y1) (x2, y2) = (x1 + x2, y1 + y2)

testAddVectors : Script ()
testAddVectors = script do
  let addedVectors = addVectors (1.0, 7.5) (2.14, 8.0)
  debug $ addedVectors